# Audit daemon configuration - Generated by Ansible

# Set the log file name
log_file = /var/log/audit/audit.log

# Set the log format
log_format = RAW

# Set the log file size
max_log_file = 50

# Set the number of log files to keep
num_logs = 5

# Set the priority of the audit daemon
priority_boost = 4

# Set the flush interval
flush = INCREMENTAL_ASYNC

# Set the frequency of audit log rotation
freq = 50

# Set the number of outstanding audit buffers
num_logs = 5

# Set the dispatcher
dispatcher = /sbin/audispd

# Set the name format
name_format = HOSTNAME

# Set the max_log_file_action
max_log_file_action = ROTATE

# Set the space_left
space_left = 75

# Set the space_left_action
space_left_action = SYSLOG

# Set the admin_space_left
admin_space_left = 50

# Set the admin_space_left_action
admin_space_left_action = SUSPEND

# Set the disk_full_action
disk_full_action = SUSPEND

# Set the disk_error_action
disk_error_action = SUSPEND

# Set the tcp_listen_port
tcp_listen_port = 60

# Set the tcp_listen_queue
tcp_listen_queue = 5

# Set the tcp_max_per_addr
tcp_max_per_addr = 1

# Set the tcp_client_ports
tcp_client_ports = 1024-65535

# Set the tcp_client_max_idle
tcp_client_max_idle = 0

# Set the enable_krb5
enable_krb5 = no

# Set the krb5_principal
krb5_principal = auditd

# Set the krb5_key_file
krb5_key_file = /etc/audit/audit.key
