# Password policy configuration - Generated by Ansible

# Password quality requirements
password requisite pam_pwquality.so retry=3 minlen=8 dcredit=-1 ucredit=-1 lcredit=-1 ocredit=-1

# Password history
password sufficient pam_unix.so sha512 shadow nullok try_first_pass use_authtok remember=5

# Password aging
password sufficient pam_unix.so sha512 shadow nullok try_first_pass use_authtok min=1 max=90 warn=7

# Account management
account required pam_unix.so

# Session management
session required pam_unix.so
