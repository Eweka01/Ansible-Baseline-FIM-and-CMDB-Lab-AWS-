{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CMDB Data Schema",
  "description": "Schema for Configuration Management Database data",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "collection_timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "collector_version": {
          "type": "string"
        },
        "hostname": {
          "type": "string"
        },
        "environment": {
          "type": "string",
          "enum": ["development", "staging", "production"]
        }
      },
      "required": ["collection_timestamp", "collector_version", "hostname"]
    },
    "system_info": {
      "type": "object",
      "properties": {
        "hostname": {
          "type": "string"
        },
        "fqdn": {
          "type": "string"
        },
        "platform": {
          "type": "string"
        },
        "system": {
          "type": "string"
        },
        "release": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "machine": {
          "type": "string"
        },
        "processor": {
          "type": "string"
        },
        "architecture": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "python_version": {
          "type": "string"
        },
        "boot_time": {
          "type": "string",
          "format": "date-time"
        },
        "uptime_seconds": {
          "type": "integer"
        }
      },
      "required": ["hostname", "system", "release", "architecture"]
    },
    "hardware_info": {
      "type": "object",
      "properties": {
        "cpu": {
          "type": "object",
          "properties": {
            "count": {
              "type": "integer"
            },
            "count_logical": {
              "type": "integer"
            },
            "freq": {
              "type": "object",
              "properties": {
                "current": {
                  "type": "number"
                },
                "min": {
                  "type": "number"
                },
                "max": {
                  "type": "number"
                }
              }
            },
            "usage_percent": {
              "type": "number"
            }
          }
        },
        "memory": {
          "type": "object",
          "properties": {
            "total": {
              "type": "integer"
            },
            "available": {
              "type": "integer"
            },
            "used": {
              "type": "integer"
            },
            "free": {
              "type": "integer"
            },
            "percent": {
              "type": "number"
            }
          }
        },
        "disk": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "device": {
                "type": "string"
              },
              "mountpoint": {
                "type": "string"
              },
              "fstype": {
                "type": "string"
              },
              "total": {
                "type": "integer"
              },
              "used": {
                "type": "integer"
              },
              "free": {
                "type": "integer"
              },
              "percent": {
                "type": "number"
              }
            }
          }
        },
        "network": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "addresses": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "family": {
                      "type": "string"
                    },
                    "address": {
                      "type": "string"
                    },
                    "netmask": {
                      "type": "string"
                    },
                    "broadcast": {
                      "type": "string"
                    }
                  }
                }
              },
              "stats": {
                "type": "object",
                "properties": {
                  "isup": {
                    "type": "boolean"
                  },
                  "duplex": {
                    "type": "integer"
                  },
                  "speed": {
                    "type": "integer"
                  },
                  "mtu": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        }
      }
    },
    "software_info": {
      "type": "object",
      "properties": {
        "packages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "version": {
                "type": "string"
              },
              "manager": {
                "type": "string",
                "enum": ["dpkg", "rpm", "yum", "apt", "pip", "npm"]
              }
            },
            "required": ["name", "version", "manager"]
          }
        },
        "services": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "status": {
                "type": "string"
              },
              "manager": {
                "type": "string"
              }
            }
          }
        },
        "processes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pid": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              },
              "cmdline": {
                "type": "string"
              },
              "cpu_percent": {
                "type": "number"
              },
              "memory_percent": {
                "type": "number"
              }
            }
          }
        }
      }
    },
    "network_info": {
      "type": "object",
      "properties": {
        "interfaces": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "addresses": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "family": {
                      "type": "string"
                    },
                    "address": {
                      "type": "string"
                    },
                    "netmask": {
                      "type": "string"
                    },
                    "broadcast": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "connections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "fd": {
                "type": "integer"
              },
              "family": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "laddr": {
                "type": "string"
              },
              "raddr": {
                "type": "string"
              },
              "status": {
                "type": "string"
              },
              "pid": {
                "type": "integer"
              }
            }
          }
        },
        "routing": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dns": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "security_info": {
      "type": "object",
      "properties": {
        "users": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "username": {
                "type": "string"
              },
              "uid": {
                "type": "string"
              },
              "gid": {
                "type": "string"
              },
              "home": {
                "type": "string"
              },
              "shell": {
                "type": "string"
              }
            }
          }
        },
        "groups": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "gid": {
                "type": "string"
              },
              "members": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "sudoers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ssh_keys": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "file": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "fingerprint": {
                "type": "string"
              }
            }
          }
        },
        "firewall": {
          "type": "object",
          "properties": {
            "ufw": {
              "type": "string"
            }
          }
        },
        "selinux": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string"
            }
          }
        }
      }
    },
    "environment_info": {
      "type": "object",
      "properties": {
        "environment_variables": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "cron_jobs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "systemd_timers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "log_files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": ["metadata", "system_info", "hardware_info", "software_info", "network_info", "security_info", "environment_info"]
}

